{
    "name": "syncpad-frontend",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "next dev --turbopack -p 3050",
        "build": "next build",
        "start": "next start -p 3050",
        "lint": "tsc --noEmit && biome check --write && next lint",
        "test": "NEXT_PUBLIC_WEBSOCKET_URI=ws://localhost:8080 playwright test",
        "test:ui": "playwright test --ui",
        "test:debug": "playwright test --debug",
        "test:mobile": "playwright test --grep @mobile",
        "test:headed": "playwright test --headed"
    },
    "dependencies": {
        "@syncpad/shared": "*",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "next": "15.3.4"
    },
    "devDependencies": {
        "eslint": "^9.31.0",
        "eslint-config-next": "^15.4.3",
        "playwright-core": "^1.54.1",
        "@playwright/test": "^1.54.1",
        "@tailwindcss/postcss": "^4.1.11",
        "@tailwindcss/typography": "^0.5.16",
        "@types/node": "^24.1.0",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "tailwindcss": "^4.1.11",
        "typescript": "^5.8.3"
    }
}
